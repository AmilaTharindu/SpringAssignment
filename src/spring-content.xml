    <bean id="student1"  class="org.cse.springtute.Student" p:firstName="Amila" p:lastName="Perera" p:regNumber="1" p:address="address1" > </bean>
    <bean id="student2" class="org.cse.springtute.Student" p:firstName="Tharindu" p:lastName="Perera" p:regNumber="2" p:address="address2"></bean>
    <bean id="student3" class="org.cse.springtute.Student" p:firstName="Prasad" p:lastName="Perera" p:regNumber="3" p:address="address3"></bean>

</beans>